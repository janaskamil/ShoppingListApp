<UserControl x:Class="ShoppingApp.MealName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoppingApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ComboBox IsEditable="True" IsReadOnly="False" ItemsSource="{Binding MealsList}" Text ="{Binding NewMealName}" DisplayMemberPath="MealName" SelectedItem="{Binding SelectedMeal, Mode=TwoWay}">
    </ComboBox>
</UserControl>