<UserControl x:Class="ShoppingApp.IngredientsToModify"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoppingApp">
    <StackPanel>
        <ListView ItemsSource="{Binding UsedIngredients}" DisplayMemberPath="Name" Height="300" Width="198" SelectedItem ="{Binding SelectedIngredientToModify}"></ListView>
        <TextBox  Text ="{Binding StringSelectedIngredient, Mode=TwoWay}"></TextBox>
    </StackPanel>
</UserControl>
