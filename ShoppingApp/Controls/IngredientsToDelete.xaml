<UserControl x:Class="ShoppingApp.IngredientsToDelete"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoppingApp">
    <ComboBox IsEditable="True" IsReadOnly="False" ItemsSource="{Binding MealsList}" DisplayMemberPath="MealName" Text="{Binding AddMealName}" SelectedItem="{Binding SelectedMeal, Mode=TwoWay}">
    </ComboBox>
</UserControl>
