<UserControl x:Class="ShoppingApp.ListOfIngredientsToBuy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoppingApp">
    <StackPanel Orientation="Horizontal">
        <ListView ItemsSource="{Binding IngredientsToBuy}" DisplayMemberPath="IngredientName"  Height="300" Width="198"></ListView>
        <ListView ItemsSource="{Binding IngredientsToBuy}" DisplayMemberPath="Quantity" Height="300" Width="198"></ListView>
    </StackPanel>
</UserControl>